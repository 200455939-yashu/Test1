<p id="notice"><%= notice %></p>

<h1 class="text-center">Universities</h1>
<div class="container">
<div class="text-right"><%= will_paginate @colleges %></div>
<table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th colspan="3">Domains</th>
    </tr>
  </thead>
  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.country %></td>
        <%if college.domains.count > 1%>
          <td class="text-success">
        <%else%>
          <td class="text-secondary">
        <%end%>
        <% college.domains.each do |domain| %>
          <%= domain.title%> <%= ":::"%>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>

<br>

